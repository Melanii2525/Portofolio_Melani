<script>
  const params = new URLSearchParams(window.location.search);
  const msg = params.get("msg");
  const type = params.get("type");

  if (msg) {
    localStorage.setItem("alertMessage", msg);
    localStorage.setItem("alertType", type || "success");

    window.history.replaceState({}, "", "/about#feedback");
  }

  window.addEventListener("DOMContentLoaded", () => {
    const message = localStorage.getItem("alertMessage");
    const alertType = localStorage.getItem("alertType");

    if (message) {
      const alertBox = document.createElement("div");
      alertBox.className = `alert-box alert-${alertType || "success"}`;
      alertBox.textContent = message;
      document.body.appendChild(alertBox);

      setTimeout(() => {
        alertBox.classList.add("hide");
        setTimeout(() => alertBox.remove(), 500);
      }, 3000);

      localStorage.removeItem("alertMessage");
      localStorage.removeItem("alertType");
    }
  });
</script>

<script>
  function confirmDelete(event) {
    event.preventDefault(); 

    const confirmBox = document.createElement("div");
    confirmBox.className = "confirm-box";
    confirmBox.innerHTML = `
      <div class="confirm-content">
        <h4>Yakin hapus feedback ini?</h4>
        <p>Tindakan ini tidak bisa dibatalkan.</p>
        <div class="confirm-actions">
          <button id="confirmYes" class="btn danger">Ya, hapus</button>
          <button id="confirmNo" class="btn outline">Batal</button>
        </div>
      </div>
    `;

    document.body.appendChild(confirmBox);

    document.getElementById("confirmNo").onclick = () => confirmBox.remove();

    document.getElementById("confirmYes").onclick = () => {
      confirmBox.remove();
      event.target.submit(); 
    };

    return false;
  }
</script>

