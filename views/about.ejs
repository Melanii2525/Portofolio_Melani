<script>
  function showAlert(message, type = "success") {
    const alertBox = document.getElementById("alertBox");
    const alertMessage = document.getElementById("alertMessage");

    alertBox.className = "alert alert-dismissible fade show";

    if (type === "success") {
      alertBox.classList.add("alert-success");
      message = "âœ… " + message;
    } else if (type === "warning") {
      alertBox.classList.add("alert-warning");
      message = "âœï¸ " + message;
    } else if (type === "danger") {
      alertBox.classList.add("alert-danger");
      message = "ðŸ—‘ï¸ " + message;
    }

    alertMessage.textContent = message;
    alertBox.classList.remove("d-none");

    setTimeout(() => {
      alertBox.classList.remove("show");
      setTimeout(() => alertBox.classList.add("d-none"), 500);
    }, 3000);
  }

  document.addEventListener("DOMContentLoaded", () => {
    const msg = localStorage.getItem("alertMessage");
    const type = localStorage.getItem("alertType");

    if (msg) {
      showAlert(msg, type || "success");
      localStorage.removeItem("alertMessage");
      localStorage.removeItem("alertType");
    }
  });
</script>

